<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBack"
    tools:context=".doctor.PatientInfoList">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/profile_icon_1"
        android:layout_margin="@dimen/_10sdp"
        />
    <LinearLayout
        android:id="@+id/label"
        android:layout_below="@+id/profilePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/calendar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nexabold"
        android:text="select a day"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_16ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_left_24"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_nav"
            android:layout_marginEnd="@dimen/_4sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_white"
            android:text="Today"
            android:fontFamily="@font/nexabold"
            android:textAllCaps="false"
            android:textColor="@color/blueBack" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/_69sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_right_24"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_nav"
            android:layout_marginStart="@dimen/_4sdp"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/calendar_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02 JAN"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/white"
            android:background="@drawable/plan_back_blue"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:padding="@dimen/_20sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="request number"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/20"
                android:fontFamily="@font/nexabold"
                android:background="@drawable/circle_white"
                android:textColor="@color/blue"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>





    </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/patients_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:layout_below="@+id/label"
            />
    </RelativeLayout>
</FrameLayout>