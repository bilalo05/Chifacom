<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Register">
    <RelativeLayout
        android:id="@+id/topbar_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1"
            >
            <View
                android:id="@+id/step1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:background="@color/blueBack"
                />
            <View
                android:id="@+id/step2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar_steps"/>



    <LinearLayout
        android:id="@+id/bottomSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="@dimen/_20sdp"
        >

        <View
            android:id="@+id/back2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/ic_baseline_arrow_left_24"

            />


        <View
            android:id="@+id/s1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_gray"
            android:layout_marginEnd="@dimen/_3sdp"
            />
        <View
            android:id="@+id/s2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_gray"
            android:layout_margin="@dimen/_3sdp"
            />
        <View
            android:id="@+id/s3"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_gray"
            android:layout_margin="@dimen/_3sdp"
            />
        <View
            android:id="@+id/s4"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_gray"
            android:layout_margin="@dimen/_3sdp"
            />




    </LinearLayout>

</RelativeLayout>