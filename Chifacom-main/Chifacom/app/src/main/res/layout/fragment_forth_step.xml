<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.ForthStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:text="Confirmation de Numero de telephone"
                android:textAlignment="center"
                android:textColor="@color/blueBack"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/nexa_light"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/un_code_six_chiffres_sera_envoy"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/numero_de_telephone"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/changeNumber"
                    android:layout_width="@dimen/_100sdp"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/changer"
                    android:textColor="@color/blue"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nexa_light"
                    android:drawableStart="@drawable/ic_baseline_arrow_left_24"
                    android:background="@drawable/circle_transparent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:gravity="center"
                    android:id="@+id/confirmNumber"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/confirmer"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_light"
                    android:background="@drawable/bg_signin_btn"/>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Apres"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/min1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="#dfdfdf"
                    />
                <TextView
                    android:id="@+id/min2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="#dfdfdf"
                    />
                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text=":"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    />
                <TextView
                    android:id="@+id/sec1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="#dfdfdf"
                    />
                <TextView
                    android:id="@+id/sec2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="#dfdfdf"
                    />



            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resendCode"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:text="@string/renvoyer_le_code"
                android:textAllCaps="false"
                android:fontFamily="@font/nexa_light"
                android:background="@drawable/bg_signin_btn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:text="@string/entrer_le_code"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                />




            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cd1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:background="@drawable/language_1"/>
                <EditText
                    android:id="@+id/cd2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/language_1"/>
                <EditText
                    android:id="@+id/cd3"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:background="@drawable/language_1"/>
                <EditText
                    android:id="@+id/cd4"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/language_1"/>
                <EditText
                    android:id="@+id/cd5"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:background="@drawable/language_1"/>
                <EditText
                    android:id="@+id/cd6"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/language_1"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/allset"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/allset"
                 android:background="@drawable/bg_signin_btn"
                android:layout_marginVertical="@dimen/_20sdp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextStep4"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_signin_btn"
                android:text="@string/suivant"
                android:fontFamily="@font/nexabold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>