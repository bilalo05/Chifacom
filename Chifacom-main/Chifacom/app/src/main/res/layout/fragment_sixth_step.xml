<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.SixthStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/firstLetter"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@drawable/circle_transparent"
                    android:text="M"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_50sdp"
                    android:textAlignment="center"
                    android:padding="@dimen/_40sdp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/specialite"
                    android:fontFamily="@font/nexabold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tu_peux_ajouter_plus_de_specialite_plus_tard"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:fontFamily="@font/nexabold"
                    android:textSize="@dimen/_10sdp"


                    />

                <EditText
                    android:id="@+id/speciality"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:hint="@string/specialite"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_light"
                    android:background="@drawable/bgsss"
                    android:paddingHorizontal="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/email_electronique"
                    android:fontFamily="@font/nexabold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/nexa_light"
                    android:textSize="@dimen/_10sdp"
                    android:hint="@string/email_electronique"
                    android:background="@drawable/bgsss"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_8sdp"/>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextStep6"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_signin_btn"
                    android:text="@string/suivant"
                    android:fontFamily="@font/nexabold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_25sdp"
                    />
            </LinearLayout>



        <ImageView
            android:id="@+id/backtosecurity"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/ic_baseline_arrow_left_24"
            />


    </RelativeLayout>

</FrameLayout>