<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.SeventhStepFragment"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerVertical="true"

    >

    <TextView
        android:id="@+id/label1"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:text="@string/bienvenu_dr"
        android:textColor="@color/blueBack"
        android:textSize="@dimen/_25ssp"
        android:fontFamily="@font/nexa_light"
        />
    <TextView
        android:id="@+id/doctorfull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/doctor_fullname"
        />

    <ImageView
        android:id="@+id/docImg"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/ic_m"
        android:background="@drawable/circle_transparent"
        android:layout_marginVertical="@dimen/_10sdp"
        android:padding="@dimen/_30sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inserer_photo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/bg_signin_btn"
        android:text="@string/inserer_votre_photo"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:textSize="@dimen/_8ssp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitRegistration"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_signin_btn"
        android:text="@string/soumettre"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:layout_marginVertical="@dimen/_30sdp"

        />
</LinearLayout>


    <TextView
        android:id="@+id/back"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/ic_baseline_arrow_left_24"
        />







</RelativeLayout>
