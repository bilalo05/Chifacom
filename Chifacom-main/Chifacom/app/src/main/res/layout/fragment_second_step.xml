<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.SecondStepFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/backtofirst"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_baseline_arrow_left_24"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/personal_informations"
            android:textColor="@color/blueBack"
            android:textSize="@dimen/_22ssp"
            android:fontFamily="@font/nexa_light"
            />

        <EditText
            android:id="@+id/fname"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="Nom"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:fontFamily="@font/nexa_light"
            android:background="@drawable/bgsss"
            android:paddingHorizontal="@dimen/_8sdp"
            />
        <EditText
            android:id="@+id/fnameAR"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:hint="اللقب"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:fontFamily="@font/nexa_light"
            android:background="@drawable/bgsss"
            android:paddingHorizontal="@dimen/_8sdp"
            />

        <EditText
            android:id="@+id/lname"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:hint="Prenom"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:fontFamily="@font/nexa_light"
            android:background="@drawable/bgsss"
            android:paddingHorizontal="@dimen/_8sdp"
            />

        <EditText
            android:id="@+id/lnameAR"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:hint="الاسم"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:fontFamily="@font/nexa_light"
            android:background="@drawable/bgsss"
            android:paddingHorizontal="@dimen/_8sdp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextStep2"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/custom_background_transparent"
            android:text="@string/suivant"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/blue"
            android:layout_marginTop="@dimen/_25sdp"
            />


    </LinearLayout>

</RelativeLayout>

</FrameLayout>