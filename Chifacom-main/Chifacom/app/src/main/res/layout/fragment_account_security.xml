<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.AccountSecurityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paramaters"
            android:textColor="@color/blue"
            android:fontFamily="@font/nexabold"
            android:textSize="@dimen/_20ssp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compte et securite"
            android:fontFamily="@font/nexa_light"
            android:textSize="@dimen/_12ssp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changer Nom d'utilisateur"
            android:fontFamily="@font/nexa_light"
            android:textSize="@dimen/_6ssp"
            android:textColor="@color/blue"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nomutilisateur"
                android:fontFamily="@font/nexa_light"
                />

            <EditText
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/circle_transparent"
                android:hint="@string/nom_d_utilisateur"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="Enregistre"
            android:fontFamily="@font/nexa_light"
            android:textColor="@color/white"
            android:layout_below="@id/layout2"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="false"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_signin_btn"
            />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@drawable/ic_rectangle_8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changer Mot de passe"
            android:fontFamily="@font/nexa_light"
            android:textSize="@dimen/_6ssp"
            android:textColor="@color/blue"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <EditText
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/circle_transparent"
                    android:hint="Mot de passe actuel"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"/>

                <EditText
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/circle_transparent"
                    android:hint="@string/nouveau_mot_de_passe"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"/>

                <EditText
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/circle_transparent"
                    android:hint="@string/reecrir_mot_de_passe"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:text="Enregistre"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/white"
                android:layout_below="@id/layout1"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_signin_btn"
                />



        </RelativeLayout>



    </LinearLayout>
        <View
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:background="@drawable/ic_rectangle_8"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pour changer les information \n officielles. \n Veuillez Contactez panneau d'administration \n chifacom"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/nexa_light"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@color/white"
            android:text="Boite de reception"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/nexa_light"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/bg_signin_btn"
            />
    </LinearLayout>
</FrameLayout>