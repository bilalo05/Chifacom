<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Register">
    <RelativeLayout
        android:id="@+id/topbar_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1"
            >
            <View
                android:id="@+id/step1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@color/blueBack"
                />
            <View
                android:id="@+id/step2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step6"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@android:color/darker_gray"/>
            <View
                android:id="@+id/step7"
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:layout_weight="0.142"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/steps"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/blue"
                android:text="@string/etap_1_7"/>
            <TextView
                android:id="@+id/stepLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:textColor="@color/black"
                android:text="@string/type_de_compte"/>

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar_steps"/>





</RelativeLayout>