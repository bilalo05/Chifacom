<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.ForthStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/label"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="@string/informations_d_identit"
                android:textColor="@color/blueBack"
                android:textSize="@dimen/_25ssp"
                android:fontFamily="@font/nexa_light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/labelscan"
                    android:layout_width="@dimen/_320sdp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/scannez_votre_carte_d_identit_biom_trique"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_light"
                    />
                <ImageButton
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@color/blueBack"
                    />
            </LinearLayout>


        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextStep4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
            android:text="@string/suivant" />


    </RelativeLayout>

</FrameLayout>