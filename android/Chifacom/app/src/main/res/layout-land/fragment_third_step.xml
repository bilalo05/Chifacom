<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.SecondStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="@string/personal_informations"
                    android:textColor="@color/blueBack"
                    android:textSize="@dimen/_22ssp"
                    android:fontFamily="@font/nexa_light"
                    />

                <EditText
                    android:id="@+id/speciality"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:hint="@string/specialite"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:fontFamily="@font/nexa_light"
                    android:background="@drawable/bgsss"
                    android:paddingHorizontal="@dimen/_8sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/birthdate"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:hint="@string/birth_date_place"
                    android:fontFamily="@font/nexa_light"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@drawable/bgsss"/>

                <EditText
                    android:id="@+id/birthplace"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:hint="@string/lieu_de_naissance"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:fontFamily="@font/nexa_light"
                    android:background="@drawable/bgsss"
                    android:paddingHorizontal="@dimen/_8sdp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
            android:text="@string/suivant" />
    </RelativeLayout>

</FrameLayout>