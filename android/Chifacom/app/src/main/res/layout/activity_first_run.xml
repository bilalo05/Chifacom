<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstRunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Fr"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/language_1"
            android:text="fr"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/white"
            android:backgroundTint="#338DC9"
            android:onClick="setFr"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Ar"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/language_1"
            android:text="ar"
            android:fontFamily="@font/nexabold"
            android:textColor="@android:color/white"
            android:backgroundTint="#e5e5e5"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:onClick="setAr"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitLang"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/allsetback"
            android:textColor="@color/white"
            />



    </LinearLayout>


</RelativeLayout>