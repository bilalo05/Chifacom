<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lang_background"
    tools:context=".FirstRunActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenu_en_chifacom_app"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_80sdp"
        />

    <TextView
        android:id="@+id/langLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:text="@string/choisir_votre_language"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_120sdp"
        />
    <Spinner
        android:id="@+id/languages"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/langLabel"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@drawable/custom_button"
        android:padding="@dimen/_10sdp"
        android:entries="@array/langs"
        android:spinnerMode="dialog"
        android:layout_marginVertical="@dimen/_30sdp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitLang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/submit_button"
        android:layout_alignParentBottom="true"
        android:text="@string/soumettre"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"

        />


</RelativeLayout>