<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_choose_language_bg"
    tools:context=".FirstRunActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80sdp"
        android:fontFamily="@font/nexa_light"
        android:text="@string/bienvenu_en_chifacom_app"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitLang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/loading_bg_color"
        android:text="@string/soumettre"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submitLang"
        android:layout_below="@+id/welcome"
        android:gravity="center">

        <TextView
            android:id="@+id/langLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nexa_light"
            android:text="@string/choisir_votre_language"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

        <Spinner
            android:id="@+id/languages"
            android:layout_width="@dimen/_228sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_below="@+id/langLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/custom_button"
            android:entries="@array/langs"
            android:padding="@dimen/_10sdp"
            android:spinnerMode="dialog"
            android:textAlignment="center" />

    </RelativeLayout>


</RelativeLayout>