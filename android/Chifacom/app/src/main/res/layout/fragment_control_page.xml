<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.ControlPageFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/profile_icon_2"
        android:layout_margin="@dimen/_10sdp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_de_contr_le"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_20ssp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/organiser_votre_travail"
            android:textSize="@dimen/_14ssp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
android:gravity="center"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/bg_signin_btn"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/calendar_white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendrier"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:background="@drawable/circle_transparent"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_baseline_add_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actions"
                    android:textColor="@color/blue"
                    />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circle_transparent"
                android:hint="05"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/circle_transparent"
                android:hint="05"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circle_transparent"
                android:hint="1994"
                android:textAlignment="center"
                />


        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/nexabold"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_left_24"
        app:drawableEndCompat="@drawable/ic_baseline_arrow_right_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Janvier"
            android:fontFamily="@font/nexabold"
            android:layout_marginVertical="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            app:drawableStartCompat="@drawable/ic_baseline_arrow_left_24"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_right_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:fontFamily="@font/nexabold"
            android:textSize="@dimen/_20sdp"
            app:drawableStartCompat="@drawable/ic_baseline_arrow_left_24"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_right_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/timeline"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/appoint1"
                    android:background="@drawable/bg_gray"
                    android:padding="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="20-02-2020"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/bg_gray"
                    android:textAlignment="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/nexabold"

                    />
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/bg_gray"
                    android:padding="@dimen/_10sdp"
                    />

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

</FrameLayout>