<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.SixthStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/label"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/informations_d_identit"
                    android:textColor="@color/blueBack"
                    android:textSize="@dimen/_25ssp"
                    android:fontFamily="@font/nexa_light"
                    />
                <TextView
                    android:id="@+id/labelscan"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/scannez_votre_carte_d_identit_biom_trique"
                    android:textSize="@dimen/_22ssp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/nexa_light"
                    />
                <ImageButton
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@color/blueBack"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextStep6"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/custom_background_transparent"
                    android:text="@string/suivant"
                    android:fontFamily="@font/nexabold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="@dimen/_15sdp"
                    />
            </LinearLayout>



        <TextView
            android:id="@+id/back"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/ic_baseline_arrow_left_24"
            />


    </RelativeLayout>

</FrameLayout>