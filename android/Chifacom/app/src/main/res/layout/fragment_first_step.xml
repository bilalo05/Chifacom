<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.FirstStepFragment">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/step1"
       android:layout_marginTop="@dimen/_10sdp"
       />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_140sdp"
       >
   <TextView
       android:id="@+id/label"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/je_suis_un_une"
       android:layout_marginStart="@dimen/_40sdp"
       android:textSize="@dimen/_25ssp"
       android:textColor="@color/blueBack"
       />


      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/doctorNav"
          android:layout_width="@dimen/_180sdp"
          android:layout_height="@dimen/_80sdp"
          android:text="@string/docteur"
          android:textSize="@dimen/_22ssp"
          android:layout_below="@id/label"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/_30sdp"
          android:background="@drawable/custom_button2"
          />
      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/cabinetNav"
          android:layout_width="@dimen/_180sdp"
          android:layout_height="@dimen/_80sdp"
          android:text="@string/cabinet"
          android:textSize="@dimen/_22ssp"
          android:layout_below="@id/doctorNav"
          android:layout_centerHorizontal="true"
          android:layout_marginVertical="@dimen/_20sdp"
          android:background="@drawable/custom_button2"
          />
      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/clinicNav"
          android:layout_width="@dimen/_180sdp"
          android:layout_height="@dimen/_80sdp"
          android:text="@string/clinique"
          android:textSize="@dimen/_22ssp"
          android:layout_below="@id/cabinetNav"
          android:layout_centerHorizontal="true"
          android:background="@drawable/custom_button2"
          android:layout_marginBottom="@dimen/_10sdp"
          />


   </RelativeLayout>


</FrameLayout>