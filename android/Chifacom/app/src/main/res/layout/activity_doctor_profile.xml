<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.DoctorHomeActivity"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_background_2"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/uploadPic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/upload_icon"
                android:background="@drawable/white_button"
                android:layout_gravity="center_vertical"

                />

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/profile_icon_1"

                />

            <ImageView
                android:id="@+id/TakePic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/camera_icon"
                android:background="@drawable/white_button"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>



        <TextView
            android:id="@+id/label"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/nom_de_docteur"
            android:fontFamily="@font/nexabold"
            android:textSize="@dimen/_12sdp"
            android:textAlignment="center"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/description"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/ce_texte_est_pour_la_bio_du_m_decin"
           android:fontFamily="@font/nexa_light"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0.73"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/domaine"
            android:layout_gravity="center"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/blue"
            />

        <LinearLayout
            android:id="@+id/goToProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >


            <ImageView
                android:id="@+id/add1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/upload_icon"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/cloud"


                />

            <ImageView
                android:id="@+id/add2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/upload_icon"
                android:layout_gravity="center_vertical"

                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information"
            android:layout_gravity="center"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/blue"
            android:layout_marginVertical="@dimen/_15sdp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/roomNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:fontFamily="@font/nexabold"
                android:text="@string/pays_n_province"
                android:textAlignment="center"
                android:textSize="@dimen/_11ssp"
                app:drawableTopCompat="@drawable/home_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_n_sam_dim_lun"
                android:layout_marginHorizontal="@dimen/_40sdp"
                android:fontFamily="@font/nexabold"
                android:textSize="@dimen/_10ssp"
                android:textAlignment="center"
                app:drawableTopCompat="@drawable/schedule" />


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/plus_1"

            />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintEnd_toStartOf="@+id/save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:background="#E6E6E6"
        android:text="@string/annuler"
        android:textColor="@color/white"
        android:fontFamily="@font/nexabold"
        android:textSize="@dimen/_10sdp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/blue"
        android:text="@string/enregistrer"
        android:textColor="@color/white"
        android:fontFamily="@font/nexabold"
        android:textSize="@dimen/_8sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>