<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.ThirdStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/mapFragment"
            >

            <TextView
                android:id="@+id/label"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40sdp"
                android:text="@string/adresse_et_localisation"
                android:textColor="@color/blueBack"
                android:textSize="@dimen/_25ssp"
                android:layout_margin="@dimen/_20sdp"
                android:fontFamily="@font/nexa_light"
                />

            <EditText
                android:id="@+id/address"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_35sdp"
                android:hint="@string/ecriver_votre_adresse"
                android:textSize="@dimen/_12ssp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nexa_light"
                android:background="@drawable/bgsss"
                android:paddingHorizontal="@dimen/_8sdp"
                />

            <TextView
                android:id="@+id/labelMap"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nexa_light"
                android:text="@string/se_situer_sur_google_maps"
                android:textSize="@dimen/_18ssp"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/_10sdp"/>


        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/blueBack"
            android:gravity="center"
            android:text="MAP" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
            android:text="@string/suivant" />
    </RelativeLayout>


</FrameLayout>