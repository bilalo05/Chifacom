<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.ForthStepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/submitRegistration">

            <TextView
                android:id="@+id/label"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:text="@string/informations_d_identit"
                android:textColor="@color/blueBack"
                android:textSize="@dimen/_25ssp"
                android:fontFamily="@font/nexa_light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/label"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/labelscan"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label"
                    android:text="@string/scannez_votre_carte_d_identit_biom_trique"
                    android:textSize="@dimen/_22ssp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/nexa_light"
                    />
                <ImageButton
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@color/blueBack"
                    />
            </LinearLayout>


        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitRegistration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/submit_button"
            android:text="@string/soumettre"
            android:textColor="@color/white"
            android:textSize="@dimen/_17ssp"

            />
    </RelativeLayout>

</FrameLayout>